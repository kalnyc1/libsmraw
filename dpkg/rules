#!/usr/bin/make -f
# debian/rules that uses debhelper >= 7.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS


%:
	dh  $@

install_libsmraw:
	# Set up libsmraw package directories and files
	mkdir -p debian/libsmraw/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.so.* debian/libsmraw/usr/lib

install_libsmraw_dev:
	# Set up libsmraw-dev package directories and files
	mkdir -p debian/libsmraw-dev/usr/include
	mkdir -p debian/libsmraw-dev/usr/include/libsmraw
	mkdir -p debian/libsmraw-dev/usr/lib
	mkdir -p debian/libsmraw-dev/usr/lib/pkgconfig
	mkdir -p debian/libsmraw-dev/usr/share/man/man3
	install -p -m755 debian/tmp/usr/include/*.h debian/libsmraw-dev/usr/include
	install -p -m755 debian/tmp/usr/include/libsmraw/*.h debian/libsmraw-dev/usr/include/libsmraw
	install -p -m755 debian/tmp/usr/lib/*.la debian/libsmraw-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.a debian/libsmraw-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.so debian/libsmraw-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/pkgconfig/* debian/libsmraw-dev/usr/lib/pkgconfig
	install -p -m755 debian/tmp/usr/share/man/man3/* debian/libsmraw-dev/usr/share/man/man3

install_libsmraw_tools:
	# Set up libsmraw-tools package directories and files
	mkdir -p debian/libsmraw-tools/usr/bin
	mkdir -p debian/libsmraw-tools/usr/share/man/man1
	install -p -m755 debian/tmp/usr/bin/* debian/libsmraw-tools/usr/bin
	install -p -m755 debian/tmp/usr/share/man/man1/* debian/libsmraw-tools/usr/share/man/man1

override_dh_auto_test:

override_dh_installinit: install_libsmraw install_libsmraw_dev install_libsmraw_tools

override_dh_installmenu:

override_dh_installmime:

override_dh_installmodules:

override_dh_installlogcheck:

override_dh_installlogrotate:

override_dh_installpam:

override_dh_installppp:

override_dh_installudev:

override_dh_installwm:

override_dh_installxfonts:

override_dh_gconf:

override_dh_icons:

override_dh_perl:

override_dh_shlibdeps:
	dh_shlibdeps -Llibsmraw -l${PWD}/debian/tmp/usr/lib

override_dh_makeshlibs:
	dh_makeshlibs -Xlibsmraw-dev

